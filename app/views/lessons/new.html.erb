<% provide :title, "Lesson" %>
<h1><%= @category.name %></h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for [@category, @lesson], html: {class: "lesson-form"} do |f| %>
      <%= f.fields_for :answer_sheets do |builder| %>
        <%= render "answer_sheet", f: builder %>
      <% end %>
    <% end %>
  </div>
</div>
