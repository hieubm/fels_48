<% provide :title, "Result" %>
<h1>
  Result: <%= "#{@lesson.correct_num}/#{@lesson.answer_sheets.length}" %>
</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <table class="table">
      <thead>
        <tr>
          <th class="col-sm-4">Word</th>
          <th class="col-sm-4">Correct Answer</th>
          <th class="col-sm-4">Your Answer</th>
        </tr>
      </thead>
      <% @lesson.answer_sheets.each do |answer_sheet| %>
        <tr>
          <td>
            <%= answer_sheet.word.content %>
          </td>
          <td>
            <%= answer_sheet.word.answers.correct.first.content %>
          </td>
          <td class="<%= answer_sheet.correct? ? "success" : "danger" %>">
              <%= answer_sheet.answer.content %>
            </span>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
